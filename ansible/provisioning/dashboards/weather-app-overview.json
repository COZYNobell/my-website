{
  "__inputs": [
    {
      "name": "DS_PROMETHEUS",
      "label": "Prometheus",
      "description": "",
      "type": "datasource",
      "pluginId": "prometheus",
      "pluginName": "Prometheus"
    }
  ],
  "__requires": [
    {
      "type": "grafana",
      "id": "grafana",
      "name": "Grafana",
      "version": "10.2.2"
    },
    {
      "type": "datasource",
      "id": "prometheus",
      "name": "Prometheus",
      "version": "1.0.0"
    }
  ],
  "annotations": {
    "list": [
      {
        "builtIn": 1,
        "datasource": {
          "type": "grafana",
          "uid": "-- Grafana --"
        },
        "enable": true,
        "hide": true,
        "iconColor": "rgba(0, 211, 255, 1)",
        "name": "Annotations & Alerts",
        "type": "dashboard"
      }
    ]
  },
  "editable": true,
  "panels": [
    {
      "collapsed": false,
      "gridPos": {
        "h": 1,
        "w": 24,
        "x": 0,
        "y": 0
      },
      "id": 17,
      "panels": [],
      "title": "1. 서버 인프라 상태 (Server Infrastructure Health)",
      "type": "row"
    },
    {
      "datasource": {
        "type": "prometheus",
        "uid": "my-prometheus-ds-unique-id"
      },
      "gridPos": {
        "h": 8,
        "w": 8,
        "x": 0,
        "y": 1
      },
      "id": 9,
      "options": {
        "orientation": "auto",
        "reduceOptions": {
          "calcs": [
            "lastNotNull"
          ],
          "fields": ""
        },
        "showThresholdLabels": false,
        "showThresholdMarkers": true,
        "unit": "percent"
      },
      "pluginVersion": "11.0.0",
      "targets": [
        {
          "datasource": {
            "type": "prometheus",
            "uid": "my-prometheus-ds-unique-id"
          },
          "expr": "avg by (server_role) (100 - (rate(node_cpu_seconds_total{job=\"node_exporter\", mode=\"idle\"}[30s]) * 100))",
          "legendFormat": "{{server_role}}",
          "refId": "A"
        }
      ],
      "title": "서버 CPU 사용률 (30초 평균)",
      "type": "gauge"
    },
    {
      "datasource": {
        "type": "prometheus",
        "uid": "my-prometheus-ds-unique-id"
      },
      "gridPos": {
        "h": 8,
        "w": 8,
        "x": 8,
        "y": 1
      },
      "id": 10,
      "options": {
        "orientation": "auto",
        "reduceOptions": {
          "calcs": [
            "lastNotNull"
          ],
          "fields": ""
        },
        "showThresholdLabels": false,
        "showThresholdMarkers": true,
        "unit": "percent"
      },
      "pluginVersion": "11.0.0",
      "targets": [
        {
          "datasource": {
            "type": "prometheus",
            "uid": "my-prometheus-ds-unique-id"
          },
          "expr": "100 * (1 - (node_memory_MemAvailable_bytes{job=\"node_exporter\"} / node_memory_MemTotal_bytes{job=\"node_exporter\"}))",
          "legendFormat": "{{server_role}}",
          "refId": "A"
        }
      ],
      "title": "서버 메모리 사용률",
      "type": "gauge"
    },
    {
      "datasource": {
        "type": "prometheus",
        "uid": "my-prometheus-ds-unique-id"
      },
      "gridPos": {
        "h": 8,
        "w": 8,
        "x": 16,
        "y": 1
      },
      "id": 18,
      "options": {
        "legend": {
          "displayMode": "list",
          "placement": "bottom"
        },
        "tooltip": {
          "mode": "single"
        },
        "unit": "bytes/sec"
      },
      "targets": [
        {
          "datasource": {
            "type": "prometheus",
            "uid": "my-prometheus-ds-unique-id"
          },
          "expr": "rate(node_network_receive_bytes_total{job=\"node_exporter\"}[30s])",
          "legendFormat": "{{server_role}} - 수신",
          "refId": "A"
        },
        {
          "datasource": {
            "type": "prometheus",
            "uid": "my-prometheus-ds-unique-id"
          },
          "expr": "rate(node_network_transmit_bytes_total{job=\"node_exporter\"}[30s])",
          "legendFormat": "{{server_role}} - 송신",
          "refId": "B"
        }
      ],
      "title": "서버 네트워크 트래픽 (30초 평균)",
      "type": "timeseries"
    },
    {
      "collapsed": true,
      "gridPos": { "h": 1, "w": 24, "x": 0, "y": 9 },
      "id": 16,
      "panels": [],
      "title": "2. 주요 현황 (Key Metrics)",
      "type": "row"
    },
    {
      "datasource": { "type": "prometheus", "uid": "my-prometheus-ds-unique-id" },
      "gridPos": { "h": 5, "w": 8, "x": 0, "y": 10 },
      "id": 7,
      "options": { "colorMode": "value", "graphMode": "area", "justifyMode": "auto", "orientation": "auto", "reduceOptions": { "calcs": [ "lastNotNull" ] }, "textMode": "auto" },
      "targets": [ { "expr": "sum(increase(http_request_duration_seconds_count{job=\"weather_app\"}[$__range]))", "refId": "A" } ],
      "title": "총 요청 수",
      "type": "stat"
    },
    {
      "datasource": { "type": "prometheus", "uid": "my-prometheus-ds-unique-id" },
      "gridPos": { "h": 5, "w": 8, "x": 8, "y": 10 },
      "id": 8,
      "options": { "colorMode": "value", "graphMode": "area", "justifyMode": "auto", "orientation": "auto", "reduceOptions": { "calcs": [ "lastNotNull" ] }, "textMode": "auto" },
      "targets": [ { "expr": "sum(increase(http_request_duration_seconds_count{job=\"weather_app\", status_code=~\"5..\"}[$__range]))", "refId": "A" } ],
      "title": "총 서버 에러 (5xx)",
      "type": "stat"
    },
    {
      "datasource": { "type": "prometheus", "uid": "my-prometheus-ds-unique-id" },
      "gridPos": { "h": 5, "w": 8, "x": 16, "y": 10 },
      "id": 13,
      "options": { "colorMode": "value", "graphMode": "area", "justifyMode": "auto", "orientation": "auto", "reduceOptions": { "calcs": [ "lastNotNull" ] }, "textMode": "auto" },
      "targets": [ { "expr": "sum(increase(http_request_duration_seconds_count{job=\"weather_app\", status_code=~\"4..\"}[$__range]))", "refId": "A" } ],
      "title": "총 클라이언트 에러 (4xx)",
      "type": "stat"
    },
    {
      "collapsed": true,
      "gridPos": { "h": 1, "w": 24, "x": 0, "y": 15 },
      "id": 15,
      "panels": [],
      "title": "3. 애플리케이션 성능 (Application Performance)",
      "type": "row"
    },
    {
      "datasource": { "type": "prometheus", "uid": "my-prometheus-ds-unique-id" },
      "gridPos": { "h": 8, "w": 8, "x": 0, "y": 16 },
      "id": 2,
      "options": { "legend": { "displayMode": "list", "placement": "bottom" }, "tooltip": { "mode": "single" } },
      "targets": [ { "expr": "sum(rate(http_request_duration_seconds_count{job=\"weather_app\"}[30s])) by (route)", "legendFormat": "{{route}}", "refId": "A" } ],
      "title": "API 경로별 요청 빈도 (30초 평균)",
      "type": "timeseries"
    },
    {
      "datasource": { "type": "prometheus", "uid": "my-prometheus-ds-unique-id" },
      "gridPos": { "h": 8, "w": 8, "x": 8, "y": 16 },
      "id": 4,
      "options": { "legend": { "displayMode": "list", "placement": "bottom" }, "tooltip": { "mode": "single" }, "unit": "s" },
      "targets": [ { "expr": "sum(rate(http_request_duration_seconds_sum{job=\"weather_app\"}[30s])) by (route) / sum(rate(http_request_duration_seconds_count{job=\"weather_app\"}[30s])) by (route)", "legendFormat": "{{route}}", "refId": "A" } ],
      "title": "API 경로별 평균 응답 속도 (30초 평균)",
      "type": "timeseries"
    },
    {
      "datasource": { "type": "prometheus", "uid": "my-prometheus-ds-unique-id" },
      "gridPos": { "h": 8, "w": 8, "x": 16, "y": 16 },
      "id": 11,
      "options": { "legend": { "displayMode": "list", "placement": "bottom" }, "tooltip": { "mode": "single" }, "unit": "s" },
      "targets": [ { "expr": "histogram_quantile(0.95, sum(rate(http_request_duration_seconds_bucket{job=\"weather_app\"}[30s])) by (le, route))", "legendFormat": "{{route}}", "refId": "A" } ],
      "title": "95%ile 응답 속도 (30초 평균)",
      "type": "timeseries"
    },
    {
      "datasource": { "type": "prometheus", "uid": "my-prometheus-ds-unique-id" },
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 24 },
      "id": 12,
      "options": { "legend": { "displayMode": "table", "placement": "right", "showValue": true }, "sortBy": [ { "displayName": "Value", "sort": "desc" } ] },
      "targets": [ { "expr": "topk(5, sum(rate(http_request_duration_seconds_count{job=\"weather_app\"}[30s])) by (route))", "instant": true, "legendFormat": "{{route}}", "refId": "A" } ],
      "title": "가장 인기 있는 API Top 5 (30초 평균)",
      "type": "table"
    },
    {
      "datasource": { "type": "prometheus", "uid": "my-prometheus-ds-unique-id" },
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 24 },
      "id": 14,
      "options": { "legend": { "displayMode": "table", "placement": "right", "showValue": true }, "sortBy": [ { "displayName": "Value", "sort": "desc" } ], "unit": "s" },
      "targets": [ { "expr": "topk(5, sum(rate(http_request_duration_seconds_sum{job=\"weather_app\"}[30s])) by (route) / sum(rate(http_request_duration_seconds_count{job=\"weather_app\"}[30s])) by (route))", "instant": true, "legendFormat": "{{route}}", "refId": "A" } ],
      "title": "가장 느린 API Top 5 (30초 평균)",
      "type": "table"
    }
  ],
  "title": "날씨 앱 종합 현황판",
  "uid": "my-weather-app-dashboard",
  "version": 13,
  "weekStart": ""
}
