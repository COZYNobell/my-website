{
  "__inputs": [
    { "name": "DS_PROMETHEUS", "label": "Prometheus", "type": "datasource", "pluginId": "prometheus" }
  ],
  "__requires": [
    { "type": "grafana", "id": "grafana", "name": "Grafana", "version": "10.2.2" },
    { "type": "datasource", "id": "prometheus", "name": "Prometheus", "version": "1.0.0" }
  ],
  "annotations": {
    "list": [
      { "builtIn": 1, "datasource": { "type": "grafana", "uid": "-- Grafana --" }, "enable": true, "hide": true, "iconColor": "rgba(0, 211, 255, 1)", "name": "Annotations & Alerts", "type": "dashboard" },
      { "datasource": { "type": "grafana", "uid": "-- Grafana --" }, "enable": true, "iconColor": "#52B433", "name": "배포 기록", "tags": [ "deployment" ], "type": "tags" }
    ]
  },
  "editable": true,
  "panels": [
    { "collapsed": false, "gridPos": { "h": 1, "w": 24, "x": 0, "y": 0 }, "id": 100, "panels": [], "title": "주요 비즈니스 현황", "type": "row" },
    {
      "id": 101, "title": "시간별 총 가입자 수 추이", "type": "timeseries", "gridPos": { "h": 8, "w": 24, "x": 0, "y": 1 },
      "targets": [ { "expr": "sum(increase(users_registered_total{job=\"weather_app\"}[5m])) by (region)", "legendFormat": "{{region}} 리전 신규 가입자" } ]
    },
    { "collapsed": false, "gridPos": { "h": 1, "w": 24, "x": 0, "y": 9 }, "id": 110, "panels": [], "title": "사용자 행동 흐름 (Funnel)", "type": "row" },
    {
      "id": 111, "title": "1. 총 방문", "type": "stat", "gridPos": { "h": 5, "w": 8, "x": 0, "y": 10 },
      "targets": [ { "expr": "sum(increase(http_request_duration_seconds_count{route=\"/\", job=\"weather_app\"}[$__range]))" } ]
    },
    {
      "id": 112, "title": "2. 회원가입 시도", "type": "stat", "gridPos": { "h": 5, "w": 8, "x": 8, "y": 10 },
      "targets": [ { "expr": "sum(increase(http_request_duration_seconds_count{route=\"/signup\", job=\"weather_app\"}[$__range]))" } ]
    },
    {
      "id": 113, "title": "3. 가입 완료", "type": "stat", "gridPos": { "h": 5, "w": 8, "x": 16, "y": 10 },
      "targets": [ { "expr": "sum(increase(users_registered_total{job=\"weather_app\"}[$__range]))" } ]
    },
    { "collapsed": false, "gridPos": { "h": 1, "w": 24, "x": 0, "y": 15 }, "id": 17, "panels": [], "title": "서버 인프라 상태", "type": "row" },
    {
      "id": 9, "title": "서버 CPU 사용률", "type": "gauge", "gridPos": { "h": 8, "w": 12, "x": 0, "y": 16 },
      "targets": [ { "expr": "avg by (region, server_role) (100 - (rate(node_cpu_seconds_total{job=\"node_exporter\", mode=\"idle\"}[1m]) * 100))", "legendFormat": "{{region}} {{server_role}}" } ]
    },
    {
      "id": 10, "title": "서버 메모리 사용률", "type": "gauge", "gridPos": { "h": 8, "w": 12, "x": 12, "y": 16 },
      "targets": [ { "expr": "avg by (region, server_role) (100 * (1 - (node_memory_MemAvailable_bytes{job=\"node_exporter\"} / node_memory_MemTotal_bytes{job=\"node_exporter\"})))", "legendFormat": "{{region}} {{server_role}}" } ]
    }
  ],
  "title": "날씨 앱 종합 현황판",
  "uid": "my-weather-app-dashboard",
  "version": 25
}
