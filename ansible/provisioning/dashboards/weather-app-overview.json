{
  "title": "날씨 앱 종합 현황판",
  "uid": "my-weather-app-dashboard",
  "version": 13,
  "schemaVersion": 37,
  "style": "dark",
  "editable": true,
  "refresh": "10s",
  "timezone": "browser",
  "templating": { "list": [] },
  "time": { "from": "now-1h", "to": "now" },
  "panels": [
    {
      "title": "서버 CPU 사용률",
      "type": "gauge",
      "id": 9,
      "gridPos": { "h": 8, "w": 8, "x": 0, "y": 1 },
      "datasource": { "type": "prometheus", "uid": "my-prometheus-ds-unique-id" },
      "targets": [
        {
          "expr": "avg by (server_role, instance) (100 - (rate(node_cpu_seconds_total{job=\"node_exporter\", mode=\"idle\"}[5m]) * 100))",
          "legendFormat": "{{server_role}}",
          "refId": "A"
        }
      ],
      "options": {
        "orientation": "auto",
        "reduceOptions": {
          "calcs": ["lastNotNull"],
          "fields": ""
        },
        "showThresholdLabels": false,
        "showThresholdMarkers": true,
        "unit": "percent"
      },
      "pluginVersion": "11.0.0"
    },
    {
      "title": "서버 메모리 사용률",
      "type": "gauge",
      "id": 10,
      "gridPos": { "h": 8, "w": 8, "x": 8, "y": 1 },
      "datasource": { "type": "prometheus", "uid": "my-prometheus-ds-unique-id" },
      "targets": [
        {
          "expr": "100 * (1 - (node_memory_MemAvailable_bytes{job=\"node_exporter\"} / node_memory_MemTotal_bytes{job=\"node_exporter\"}))",
          "legendFormat": "{{server_role}}",
          "refId": "A"
        }
      ],
      "options": {
        "orientation": "auto",
        "reduceOptions": {
          "calcs": ["lastNotNull"],
          "fields": ""
        },
        "showThresholdLabels": false,
        "showThresholdMarkers": true,
        "unit": "percent"
      },
      "pluginVersion": "11.0.0"
    },
    {
      "title": "서버 네트워크 트래픽",
      "type": "timeseries",
      "id": 18,
      "gridPos": { "h": 8, "w": 8, "x": 16, "y": 1 },
      "datasource": { "type": "prometheus", "uid": "my-prometheus-ds-unique-id" },
      "targets": [
        {
          "expr": "rate(node_network_receive_bytes_total{job=\"node_exporter\"}[5m])",
          "legendFormat": "{{server_role}} - RX",
          "refId": "A"
        },
        {
          "expr": "rate(node_network_transmit_bytes_total{job=\"node_exporter\"}[5m])",
          "legendFormat": "{{server_role}} - TX",
          "refId": "B"
        }
      ],
      "options": {
        "legend": {
          "displayMode": "list",
          "placement": "bottom"
        },
        "tooltip": { "mode": "single" },
        "unit": "bytes/sec"
      },
      "pluginVersion": "11.0.0"
    }
  ]
}
